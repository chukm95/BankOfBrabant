@{
    ViewData["Title"] = "overboeken";
}


<div class="row">
    <div class="col-md-offset-2 col-md-8">
        <h2>overboeken</h2>
        <form asp-action="rekening" asp-controller="overboeken" method="post">
            <div class="form-group">
                <label for="fromRekening">Van rekening</label>
                <input type="text" class="form-control" id="fromRekening" value="@ViewBag.rekeningfrom">
            </div>
            <div class="form-group">
                <label for="bedrag">Bedrag</label>
                <input type="number" class="form-control" id="bedrag" placeholder="Bedrag">
            </div>

            <div class="form-group">
                <label for="toRekening">Naar rekening</label>
                <input type="text" class="form-control" id="toRekening" placeholder="Rekening nummer">
            </div>
            <button type="submit" class="btn btn-primary">Overboeken</button>
        </form>
    </div>
</div>
