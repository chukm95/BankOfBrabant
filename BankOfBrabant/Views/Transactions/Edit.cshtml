@model BankOfBrabant.Models.Transaction

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Transaction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="SenderAccountId" class="control-label"></label>
                <input asp-for="SenderAccountId" class="form-control" />
                <span asp-validation-for="SenderAccountId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReceiverAccountId" class="control-label"></label>
                <select asp-for="ReceiverAccountId" class="form-control" asp-items="ViewBag.ReceiverAccountId"></select>
                <span asp-validation-for="ReceiverAccountId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Euro" class="control-label"></label>
                <input asp-for="Euro" class="form-control" />
                <span asp-validation-for="Euro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Verified" /> @Html.DisplayNameFor(model => model.Verified)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
